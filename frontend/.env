# CodeVigil 前端环境配置

# API服务器地址
REACT_APP_API_URL=http://localhost:8000/api

# WebSocket服务器地址  
REACT_APP_WS_URL=ws://localhost:8000

# 应用配置
REACT_APP_NAME=CodeVigil
REACT_APP_VERSION=1.0.0

# 开发配置
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=debug

# 功能开关
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_AUTO_REFRESH=true

# 主题配置
REACT_APP_DEFAULT_THEME=morandi
REACT_APP_DEFAULT_LANGUAGE=zh-CN

# 分析配置
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_DEFAULT_PAGE_SIZE=20
REACT_APP_MAX_ANALYSIS_HISTORY=100

# 性能配置
REACT_APP_DEBOUNCE_DELAY=300
REACT_APP_REQUEST_TIMEOUT=30000
REACT_APP_WEBSOCKET_RECONNECT_DELAY=5000
